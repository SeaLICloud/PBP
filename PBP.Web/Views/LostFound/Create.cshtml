@using PBP.Web.Common
@using PBP.Web.Models.Domain
@model PBP.Web.Models.Domain.LostFound

@{
    ViewData["Title"] = "Create";
}

<section class="content">

    <div class="row">
        <div class="col-md-12">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#settings" data-toggle="tab" aria-expanded="true">失物招领</a></li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane active" id="settings">
                        <form asp-action="Create" class="form-horizontal">

                            <div class="form-group">
                                <label asp-for="Name" style="font-size:13px" class="col-sm-2 control-label">物品名称</label>
                                <div class="col-sm-8">
                                    <input asp-for="Name" class="form-control input-sm" placeholder="请输入物品名称" />
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" style="font-size:13px" class="col-sm-2 control-label">物品描述</label>
                                <div class="col-sm-8">
                                    <input asp-for="Description" class="form-control input-sm" placeholder="请输入物品描述" />
                                </div>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address" style="font-size:13px" class="col-sm-2 control-label">拾取处</label>
                                <div class="col-sm-8">
                                    <input asp-for="Address" class="form-control input-sm" placeholder="请输入拾取处" />
                                </div>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Person" style="font-size:13px" class="col-sm-2 control-label">拾取人</label>
                                <div class="col-sm-8">
                                    <input asp-for="Person" class="form-control input-sm" placeholder="请输入拾取人" />
                                </div>
                                <span asp-validation-for="Person" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Time" style="font-size:13px" class="col-sm-2 control-label">拾取时间</label>
                                <div class="col-sm-8">
                                    <input asp-for="Time" class="form-control input-sm" placeholder="请输入拾取时间" />
                                </div>
                                <span asp-validation-for="Time" class="text-danger"></span>
                            </div>
                            <a asp-action="Index" class="btn btn-default btn-sm">返回</a>
                            <input type="submit" value="确认" class="btn btn-danger pull-right btn-sm" />

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
