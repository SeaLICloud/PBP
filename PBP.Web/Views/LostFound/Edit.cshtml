@using PBP.Web.Common
@using PBP.Web.Models.Domain
@model PBP.Web.Models.Domain.LostFound

@{
    ViewData["Title"] = "Create";
}

<section class="content">

    <div class="row">
        <div class="col-md-12">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#settings" data-toggle="tab" aria-expanded="true">失物领取</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="settings">
                        <form asp-action="Edit" class="form-horizontal">
                            <input type="hidden" asp-for="Guid" />
                            <input type="hidden" asp-for="Name" />
                            <input type="hidden" asp-for="Description" />
                            <input type="hidden" asp-for="Address" />
                            <input type="hidden" asp-for="Person" />
                            <input type="hidden" asp-for="Time" />
                            <div class="form-group">
                                <label asp-for="FoundAddress" style="font-size:13px" class="col-sm-2 control-label">招领处</label>
                                <div class="col-sm-8">
                                    <input asp-for="FoundAddress" class="form-control input-sm" placeholder="请输入招领处" />
                                </div>
                                <span asp-validation-for="FoundAddress" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="FoundPerson" style="font-size:13px" class="col-sm-2 control-label">领取人</label>
                                <div class="col-sm-8">
                                    <input asp-for="FoundPerson" class="form-control input-sm" placeholder="请输入领取人" />
                                </div>
                                <span asp-validation-for="FoundPerson" class="text-danger"></span>
                            </div>
                            <a asp-action="Index" class="btn btn-default btn-sm">返回</a>
                            <input type="submit" value="确认" class="btn btn-danger pull-right btn-sm" />

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
