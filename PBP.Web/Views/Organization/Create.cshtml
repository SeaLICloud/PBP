@using PBP.Web.Models.Domain
@model PBP.Web.Models.Domain.Organization

@{
    ViewData["Title"] = "新建组织";
}

<div class="col-md-12">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">新建组织</h3>
        </div>
        <form asp-action="Create" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="box-body">

            <div class="form-group">
                <label asp-for="Name" class="control-label col-sm-2">组织名称</label>
                <div class="col-sm-6">
                    <input asp-for="Name" class="form-control"/>
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ShortName" class="control-label col-sm-2">组织简称</label>
                <div class="col-sm-6">
                    <input asp-for="ShortName" type="text" class="form-control"/>
                </div>
                <span asp-validation-for="ShortName" class="text-danger"></span>
            </div>
                
            <div class="form-group">
                <label asp-for="OrgType" class="control-label col-sm-2">组织类型</label>
                <div class="col-sm-6">
                    <select asp-for="OrgType" asp-items="@Html.GetEnumSelectList(typeof(OrgType))" class="form-control">
                        <option>---请选择---</option>
                    </select>
                </div>
                <span asp-validation-for="OrgType" class="text-danger"></span>
            </div>
                
                <a asp-action="Index" class="btn btn-default btn-sm">返回</a>
                <input type="submit" value="确认" class="btn btn-primary pull-right btn-sm" />
            </div>
        </form>

    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}