@model PBP.Web.Models.Domain.File
@{
    ViewData["Title"] = "文件上传";
}
<div class="box box-default">
    <div class="box-header with-border">
        <h3 class="box-title">文件上传</h3>
    </div>

    <form method="post" enctype="multipart/form-data" asp-controller="File" asp-action="UpLoad">
        <div class="box-body">
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control" placeholder="Enter Title"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="filename">File</label>
                <input class="btn" type="file" name="files" id="filename" multiple>
                <p class="help-block">Example block-level help text here.</p>
            </div>
        </div>
        <div class="box-footer">
            <button type="submit" class="btn btn-primary btn-sm">上传</button>
        </div>
    </form>
</div>