@model PBP.Web.Models.Domain.SystemUpdate

@{
    ViewData["Title"] = "Create";
}

<section class="content">

    <div class="row">
        <div class="col-md-12">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#settings" data-toggle="tab" aria-expanded="true">添加版本</a></li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane active" id="settings">
                        <form asp-action="Create" class="form-horizontal">

                            <div class="form-group">
                                <label asp-for="Version" style="font-size:13px" class="col-sm-2 control-label">版本号</label>
                                <div class="col-sm-8">
                                    <input asp-for="Version" class="form-control input-sm" placeholder="请输入版本号" />
                                </div>
                                <span asp-validation-for="Version" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Title" style="font-size:13px" class="col-sm-2 control-label">更新标题</label>
                                <div class="col-sm-8">
                                    <input asp-for="Title" class="form-control input-sm" placeholder="请输入更新标题" />
                                </div>
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Content" style="font-size:13px" class="col-sm-2 control-label">更新内容</label>
                                <div class="col-sm-8">
                                    <textarea asp-for="Content" class="form-control input-sm" rows="3" placeholder="请输入更新内容 ..."></textarea>
                                </div>
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>
                            <a asp-action="Index" class="btn btn-default btn-sm">返回</a>
                            <input type="submit" value="确认" class="btn btn-danger pull-right btn-sm" />

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
